generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Field_Contacts {
  FC             Int      @id @default(autoincrement())
  Date           DateTime
  ContactOfficer String?
  Supervisor     String?
  Street         String?
  City           String?
  State          String?
  Zip            String?
  Frisk          String?
  Basis          String?
  Circumstance   String?
  Year           String?
}

model Forfeiture_Cases {
  Case            Int      @id @default(autoincrement())
  Amount          Float
  Court           String
  Date            DateTime
  IncidentReports String
  MotorVehicle    String
}

model Arrest_Data {
  Incident     Int      @id @default(autoincrement())
  Occurred     DateTime
  District     String
  Shooting     String
  Location     String
  Offenses     String
  Officers     String
  Clearance    String
  NumVictims   Int
  NumOffenders Int
  NumArrests   Int
}

model Internal_Affairs {
  IA         Int      @id @default(autoincrement())
  Allegation String
  Employee   String
  Finding    String
  Received   DateTime
  Type       String
}

model Paid_Details {
  ID       Int      @id @default(autoincrement())
  Address  String
  Customer String
  Officer  String
  Pay      Float
  Start    DateTime
  Type     String
  Worked   String
}

model SWAT_Reports {
  Date    DateTime
  SWAT_ID Int      @id @default(autoincrement())
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by the Prisma Client.
model arrest_info {
  incident_number     Int @id
  offense_code        Int?
  offense_description String?   @db.VarChar(100)
  district            String?   @db.VarChar(50)
  reporting_area      String?   @db.VarChar(50)
  shooting            Int?
  occurred_on_date    DateTime? @db.Timestamp(6)
  YEAR                Int?
  MONTH               Int?
  day_of_week         String?   @db.VarChar(50)
  HOUR                Int?
  ucr_part            String?   @db.VarChar(50)
  street              String?   @db.VarChar(100)
  Location            String?   @db.VarChar(100)
}
